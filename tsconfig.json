{
    "compilerOptions":  {
                            "lib":  [
                                        "dom",
                                        "dom.iterable",
                                        "esnext",
                                        "DOM",
                                        "DOM.Iterable",
                                        "ES2017"
                                    ],
                            "allowJs":  true,
                            "skipLibCheck":  true,
                            "strict":  false,
                            "noEmit":  true,
                            "incremental":  true,
                            "module":  "esnext",
                            "esModuleInterop":  true,
                            "moduleResolution":  "node",
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "jsx":  "preserve",
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "target":  "ES2017",
                            "downlevelIteration":  true
                        },
    "include":  [
                    "next-env.d.ts",
                    ".next/types/**/*.ts",
                    "**/*.ts",
                    "**/*.tsx"
                ],
    "exclude":  [
                    "node_modules"
                ]
}
